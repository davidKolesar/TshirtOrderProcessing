@page
@model OrderProcessingApplication.Model.Order
@{
    ViewData["Title"] = "The Cincinnati T-Shirt Company";
}

<div class="text-center">
    <h1 class="display-4">Shirt Ordering Application</h1>
    <p>Update an existing order</p>
    <form id="UpdateOrderForm" enctype="multipart/form-data" action="/updateExistingOrder" method="post">
        <fieldset>
            <!--Id-->
            <label for="Id"><b>Order ID:</b></label><br>
            <input type="text" id="Id" name="Id" required><br>

            <!--Name-->
            <label for="CustomerName">Customer Full Name:</label><br>
            <input type="text" id="CustomerName" name="CustomerName" required><br>

            <!--address-->
            <label for="CustomerAddress">Customer Address:</label><br>
            <input type="text" id="CustomerAddress" name="CustomerAddress" required><br>

            <!--phone-->
            <label for="CustomerPhone">Customer Phone:</label><br>
            <input type="number" id="CustomerPhone" name="CustomerPhone" required pattern="[1-9]{1}[0-9]{9}"><br><br>

            <!--color-->
            <label for="Color">Color:</label><br>
            <select name="Color" id="Color" required>
                <option value="Red">Red</option>
                <option value="Orange">Orange</option>
                <option value="Yellow">Yellow</option>
                <option value="Green">Green</option>
                <option value="Blue">Blue</option>
                <option value="Indigo">Indigo</option>
                <option value="Violet">Violet</option>
            </select>
            <p></p>

            <!--size-->
            <label for="Size">Size:</label><br>
            <select name="Size" id="Size" required>
                <option value="Child">Child</option>
                <option value="Small">Small</option>
                <option value="Medium">Medium</option>
                <option value="Large">Large</option>
                <option value="ExtraLarge">Extra Large</option>
            </select>
            <p></p>

            <!--quantity-->
            <label for="Quantity">Quantity:</label><br>
            <input type="number" id="Quantity" min="0" oninput="validity.valid||(value='');" name="Quantity" required><br><br>

            <!--Notes-->
            <label for="Notes">Notes:</label><br>

            <textarea id="Notes" name="Notes" rows="4" cols="50">
            </textarea>

            <br><br>
            <button onclick="return alertUser()">Update Existing Order</button>
            <!-- <input type="submit" value="Submit" onclick="return alertUser()">-->
        </fieldset>
    </form>
</div>


<script>
    function alertUser() {
        var orderId = document.getElementById("Id").value;
        var customerName = document.getElementById("CustomerName").value;
        var customerAddress = document.getElementById("CustomerAddress").value;
        var customerPhone = document.getElementById("CustomerPhone").value;
        var color = document.getElementById("Color").value;
        var size = document.getElementById("Size").value;
        var quantity = document.getElementById("Quantity").value;

        var response = confirm("Name: " + customerName + " \r\n " +
            "Address: " + customerAddress + " \r\n " +
            "Phone: " + customerPhone + " \r\n " +
            "Shirt Color: " + color + " \r\n " +
            "Shirt Size: " + size + " \r\n " +
            "Order Quantity: " + quantity + " \r\n " + "\r\n" +
            "You are about to modify an existing order (Order Number : " + orderId + ")" +
            "\r\n"+
            "Are you sure this order information is correct?");

        if (response == true) {
            document.getElementById("UpdateOrderForm").submit();
        }
    }
</script>